extends layouts/template

block vars
  -title = 'Sprite'
  -menuIndex = 0

block container
  h2 Navigation type 1
  nav
    +nav([{title: 'Home', href: 'index.html', clsLi: "active", itemsMenu: {
      items: [
        {title: 'Home-1', href: 'index.html', itemsMenu: {
        items:[
          {title: 'Home-1.1', href: 'index.html'},
          {title: 'Home-1.2', href: 'index.html'}
        ], clsSub: "level-2"
        }},
        {title: 'Home-2', href: 'index.html'},
      ], clsSub: "level-1"
      }},
     {title: 'Layer', href: 'template-layer.html'},
     {title: 'Sprite', href: 'template-sprite.html'},
     {title: 'Style Guide', href: 'template-style-guide.html'},
     {title: 'Sitemap', href: 'sitemap.html'}]).menu
  h2(style="overflow: hidden; clear: both") Navigation type 2
  nav
    +link("home", "#", "home")
    +link("layer", "#", "layer")
    +link("sprite", "#", "sprite")
  h2 breadcrumb
  +breadcrumb([{text:"item-1", href:"#"},{text: "item-2", href: "#"},{text: "item-3"}],0)
  +breadcrumb([{text:"item-1", href:"#"},{text: "item-2", href: "#"},{text: "item-3"}],1)
  +breadcrumb([{text:"item-1", href:"#"},{text: "item-2", href: "#"},{text: "item-3"}],2)
  h2 Form
    h3 Customer-checkbox
    +custom-checkbox({
      inpts: {type: "checkbox", name: "checkbox-1", id: "checkbox-1"},
      textLabel: "Checkbox-1"
      }).checkbox
    +custom-checkbox({
      inpts: {type: "checkbox", name: "checkbox-2", id: "checkbox-2", checked: "checked"},
      textLabel: "Checkbox-2"
      }).checkbox
    h3 Customer-radio
    +custom-checkbox({
      inpts: {type: "radio", name: "radio-test", id: "radio-1"},
      textLabel: "radio-1"
      }).radio
    +custom-checkbox({
      inpts: {type: "radio", name: "radio-test", id: "radio-2", checked: "checked"},
      textLabel: "radio-2"
      }).radio
  h2 Custom select
  //- +custom-select({opts:[{value: 'item-1'}, {value: 'item-2'}], name:'item'})
  +custom-select({opts:[{value: 'item-1'}, {value: 'item-2'}], name:'item-normal'})
  h2(style="margin-top: 100px") paging
  +pager(1, 3, 3, 1)
  h2 light box
  aside.popup
    .popup-content
      +link("close", "#", "x")
      .header
        h3 title
      .footer
        p this is footer
